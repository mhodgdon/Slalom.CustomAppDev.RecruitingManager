@using Slalom.CustomAppDev.RecruitingManager.DomainObjects.Competency;
@model Slalom.CustomAppDev.RecruitingManager.Web.Models.HomeModel
@using Slalom.CustomAppDev.RecruitingManager.DomainObjects.Competency;
@using Slalom.CustomAppDev.RecruitingManager.Web.ViewsHelpers;


@{
    ViewBag.Title = "App Dev Interview Form";
}
@section featured {

    

  <script type="text/javascript">
      $(function () {

       
          $('#modalView').hide();

          $('#formContainer').hide();


          $("#accordion").accordion({
              collapsible: true,
              active: false,
          });

      });

      
      
      function showDiv() {

          $(".contentContainer").height(350);
          $("#selectedCandidate").show();
          var alreadyInterviewed = true;
          $(".interviewedAlready").show();
      }

      function hideModal() {

          $('#modalView').hide();

      }
      

    

  </script>

    <section class="featured" ng-controller="selectCandidateCntrl">


 <div id="candidateCreator">



                 
    <div id="swipeUp" onclick="swipeTapped()">
        <table><tr><td><h3>Select Candidate</h3></td><td ng-model="selectedCandidate">Selected Candidate: {{selectedCandidate.name}}</td></tr></table>
         </div>
   

<div id="formContainer">
   <div class="row">
          
          <div class="span9">
          <h5>Create Candidate</h5>
         

         <form ng-submit="addCandidates()">
         <span>Name: </span><input type="text" ng-model="candidateName" /><input class="submitButton" type="submit" value="add"></input>
         </form>
          
          </div>
          
          
          <div class="span9" >
          <h5>Select a Candidate</h5>
               
            <select ng-model="selectedCandidate" ng-options="c.name for c in candidates">
          
            </select>
               
           </div>   
     
     
          </div>
                
  
      
                
           <div id="selectedCandidate">
              

                <div class="title"><h4>Candidate Information</h4></div>
             
                <div class="row">
                    <div class="span2">
                    <img src="../../Images/BrendanPic.png" alt="" />
                    </div>

                    <div class="span12">
                    <strong>Name: </strong> <span ng-model="selectedCandidate">{{selectedCandidate.name}}</span> <br />
                    <strong>Number of Times Interviewed: </strong><span ng-model="selectedCandidate">{{selectedCandidate.interviewedBy}}</span> <br />
                    <strong>Interviewed By: </strong><span ng-model="selectedCandidate">{{selectedCandidate.timesInterviewed}}</span> <br />
                    <strong>Notes: </strong><span class="notes" ng-model="selectedCandidate">{{selectedCandidate.Notes}}</span>
                    </div>
               
                </div>
             
            
   </div>  


                 
        </div>
   
   
 </div>
   

           
  
        
        
       <div id="accordion" ng-controller="CompetencyHelperCntrl">
  
            @foreach (CompetencyArea area in Model.CompetencyAreas)
            { 
                 
                <div class="headerContainer"><h3>@area.ToString()</h3></div>
                <div class="contentContainer">
                    <div class="row">
                  
                    <div ng-repeat="competency in competencies">
                          @Html.Partial("CardView", area)
                    </div>
                           </div>
                </div>
            }

             
             
           <div id="modalView">
       
                <div class="modalContent">
                    
                   
         
                  
                    <strong>{{selectedCard.CompetencyName}}</strong> <br /><br />
                    <p>Competency Description: {{selectedCard.Description}}</p>
             
                <div class="currentInterview">
                   <strong>Competency Feedback</strong><br /><br />
                 <span>Candidate Level: </span>   <select>
                    <option>No Knowledge</option>
                    <option>Apprentice</option>
                    <option>Master</option>
                    </select><br />
                    
                    <span>Notes: </span><textarea maxChars="255"></textarea>
             
                </div>
             
             <strong>Interview History</strong>
             <div class="interviewedAlready">
                    
                    <div class="row">
                    <div class="span3">
                        <p>Interviewed By: </p>
                         <ul>
                            <li ng-repeat="interviewers in selectedCard.InterviewedBy">{{interviewers}}</li>                  
                         </ul>
                    
                    </div>

                    <div class="span3">
                    <p>Level</p>
                    <p>{{selectedCard.Level}}</p>
                    </div>

                    <div class="span3">
                    <p>Comments</p>
                    <p>{{selectedCard.Notes}}</p>
                    
                    </div>
                    
                    </div>
                      
                    
              </div><br />

              <button class="submitCandidateNotes" onclick="hideModal()">Submit</button>
              <button class="modalBtn" onclick="hideModal()">Cancel</button><br /><br />

            </div>
          
       
            </div> 
       </div>


       
    </section>
            }


